# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=ocpp_emu

# For Docker: Use service name instead of localhost
# MONGODB_URI=mongodb://mongodb:27017

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Application
DEBUG_MODE=true
MAX_STATIONS=10

# CSMS Default (external OCPP server to connect to)
CSMS_DEFAULT_URL=ws://localhost:9000

# For Docker: Use host.docker.internal to connect to services on host
# CSMS_DEFAULT_URL=ws://host.docker.internal:9000

# Frontend Configuration (for Docker build)
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
